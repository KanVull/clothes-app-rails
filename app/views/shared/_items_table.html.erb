<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total price</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.product.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.product.price * item.quantity %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr class="table-dark text-dark">
      <td colspan="2"></td>
      <td>Total amount:</td>
      <td><%= total_amount %></td>
    </tr>
  </tfoot>
</table>
