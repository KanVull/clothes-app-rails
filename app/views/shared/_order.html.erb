<div class="card border rounded-lg mb-3">
  <div class="card-header d-flex align-items-center">
    Order number: <%= order.id %>
    <%= link_to order_by_uuid_path(order.uuid), class: "btn btn-info mt-1 ml-auto" do %>
      <i class="fa-solid fa-circle-info"></i>
    <% end %>
  </div>
  <div class="card-body p-0">
    <% order.items.each do |item| %>
      <%= render partial: "shared/order_product", locals: { item: item } %>
    <% end %>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <span> <i class="fa-solid fa-calendar-days mr-2"></i> <%= order.created_at %> </span>
    <span> Total: <%= order.total_amount %> </span>
  </div>
</div>
