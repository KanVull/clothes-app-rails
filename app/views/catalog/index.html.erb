<%= render 'shared/navbar' %>

<!-- Page Content -->

<div class="container">
  <div class="row">
    <div class="col-lg-3 mt-3">
      Select category
      <div class="list-group">
        <% @product_categories.each do |category| %>
          <%= link_to category.name, catalog_path(category.name), class: "list-group-item"  %>
        <% end %>  
      </div>
      <%= form_tag(@form_action_path, method: :get) do %>
        <%= label_tag(:query, "Search:") %>
        <%= text_field_tag(:query, params[:query], placeholder: "Search products...") %>
        <%= label_tag(:min_price, "Min Price:") %>
        <%= number_field_tag(:min_price, params[:min_price]) %>
      
        <%= label_tag(:max_price, "Max Price:") %>
        <%= number_field_tag(:max_price, params[:max_price]) %>
      
        <%= submit_tag("Filter") %>
      <% end %>
      <a href="<%= catalog_index_path %>" class="list-group-item">Reset filtering</a>

    </div>
    <div class="col-lg-9">
      <div class="row mt-5 mx-4">
        <% if @products.present? %>
          <% @products.each do |product| %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <!-- <a href="#">
                  <img class="card-img-top" src="vendor/img/products/Adidas-hoodie.png" alt="">
                </a> -->
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="#"><%= product.name %></a>
                  </h4>
                  <h5><%= product.price %></h5>
                  <p class="card-text"><%= product.description %></p>
                </div>
                <div class="card-footer text-center">
                  <button type="button" class="btn btn-outline-success">Add to Cart</button>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          No products
        <% end %>  
      </div>

      <!-- Pagination links -->
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
    </div>

  </div>

</div>

<%= render 'shared/footer' %>
