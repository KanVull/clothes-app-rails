<h1>Carts</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">User_id</th>
      <th scope="col">Session ID</th>
      <th scope="col">Created at</th>
      <th scope="col">Last update</th>
      <th scope="col">Commands</th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |c| %>
      <tr>
        <th scope="row"><%= c.id %></th>
        <td><%= c.user_id.presence || "session's cart" %></td>
        <td><%= c.session_key.presence || "user's cart" %></td>
        <td><%= c.created_at %></td>
        <td><%= c.updated_at %></td>
        <td>
          <%= link_to "View", admin_cart_path(c), class: "btn btn-info"%>
          <%= button_to "Delete", admin_cart_path(c), method: :delete, 
              data: { confirm: "Are you sure you want to delete this cart?" }, 
              form_class: "d-inline", class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>