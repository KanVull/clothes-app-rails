<div class="container">
  <%= form_for [:admin, product], html: { class: "form-horizontal", multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :price, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :quantity, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :quantity, class: "form-control", step: "1" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :product_category_id, "Product Category", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :product_category_id, nested_categories(@root_categories), :id, :name, { prompt: "Select category" }, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :published_at, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_field :published_at, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>  