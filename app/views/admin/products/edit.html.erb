<div class="container">
  <h1>Edit Product</h1>
  <hr>
  <%= render partial: "form", locals: { product: @product, root_categories: @root_categories } %>
  <% if @product.image.attached? %>
    <%= button_to "Remove Image", admin_product_remove_product_image_path(@product), method: :delete, class: "btn btn-danger" %>
  <% end %>
  <%= button_to "Delete", admin_product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }, class: "btn btn-danger" %>
</div>
