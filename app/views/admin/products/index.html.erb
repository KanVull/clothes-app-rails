<h1>Products</h1>
<%= link_to "New Product", new_admin_product_path, class: "btn btn-primary" %>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Category</th>
      <th scope="col">Published at</th>
      <th scope="col">Commands</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |p| %>
      <tr>
        <th scope="row"><%= p.id %></th>
        <td><%= p.name %></td>
        <td><%= p.price %></td>
        <td><%= p.quantity %></td>
        <td><%= p.category %></td>
        <td><%= p.published_at %></td>
        <td>
          <%= link_to "View", admin_product_path(p), class: "btn btn-info"%>
          <%= link_to "Edit", edit_admin_product_path(p), class: "btn btn-secondary" %> 
          <%= button_to "Delete", admin_product_path(p), method: :delete, 
              data: { confirm: "Are you sure you want to delete this product?" }, 
              form_class: "d-inline", class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>