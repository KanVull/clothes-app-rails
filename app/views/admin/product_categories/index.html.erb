<h1>Product categories</h1>
<%= link_to "New Category", new_admin_product_category_path, class: "btn btn-primary" %>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Slug</th>
      <th scope="col">Name</th>
      <th scope="col">Commands</th>
    </tr>
  </thead>
  <tbody>
    <% @product_categories.each do |c| %>
      <tr>
        <th scope="row"><%= c.id %></th>
        <td><%= c.slug %></td>
        <td><%= c.name %></td>
        <td>
          <%= link_to "View", admin_product_category_path(c), class: "btn btn-info"%>
          <%= link_to "Edit", edit_admin_product_category_path(c), class: "btn btn-secondary" %> 
          <%= button_to "Delete", admin_product_category_path(c), method: :delete, 
              form: { data: { confirm: "Are you sure you want to delete this product category and all products link to it?" } }, 
              form_class: "d-inline", class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>